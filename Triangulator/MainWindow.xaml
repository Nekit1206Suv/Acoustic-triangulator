<Window x:Class="Triangulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Triangulator Dashboard" Height="850" Width="1300"
        Background="#0B0F19" Foreground="#E5E7EB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BgDark" Color="#0B0F19"/>
        <SolidColorBrush x:Key="CardBg" Color="#151B26"/>
        <SolidColorBrush x:Key="BorderColor" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>

        <!-- Input Box Style -->
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Slider Labels -->
        <Style x:Key="SliderLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: CONTROLS -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Manual Input" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Adjust station orientation" FontSize="12" Foreground="{StaticResource TextMuted}"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel>

                    <!-- Side Length Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Side Length (L)" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!-- FIXED: Added UpdateSourceTrigger=PropertyChanged here -->
                                    <TextBox Width="50" Text="{Binding ElementName=SlSideLength, Path=Value, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Style="{StaticResource InputBoxStyle}" Foreground="White"/>
                                    <TextBlock Text="m" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Grid>
                            <Slider x:Name="SlSideLength" Minimum="0.5" Maximum="25" Value="15" TickFrequency="0.5" IsSnapToTickEnabled="True" ValueChanged="OnParameterChanged"/>
                            <Grid>
                                <TextBlock Text="0.5m" FontSize="10" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Left"/>
                                <TextBlock Text="25m" FontSize="10" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Station 1 -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreen}" Margin="0,0,8,0"/>
                                <TextBlock Text="Station 1" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <!-- Elevation -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="UP-DOWN (ELEV)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlEl1, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentGreen}"/>
                            </Grid>
                            <Slider x:Name="SlEl1" Minimum="0" Maximum="90" Value="45" Margin="0,0,0,15" ValueChanged="OnParameterChanged"/>

                            <!-- Azimuth -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="LEFT-RIGHT (AZIM)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlAz1, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentBlue}"/>
                            </Grid>
                            <Slider x:Name="SlAz1" Minimum="-90" Maximum="90" Value="0" ValueChanged="OnParameterChanged"/>
                            <Grid Margin="0,2,0,0">
                                <TextBlock Text="LEFT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Left"/>
                                <TextBlock Text="CENTER" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                                <TextBlock Text="RIGHT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Station 2 -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreen}" Margin="0,0,8,0"/>
                                <TextBlock Text="Station 2" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <!-- Elevation -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="UP-DOWN (ELEV)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlEl2, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentGreen}"/>
                            </Grid>
                            <Slider x:Name="SlEl2" Minimum="0" Maximum="90" Value="45" Margin="0,0,0,15" ValueChanged="OnParameterChanged"/>

                            <!-- Azimuth -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="LEFT-RIGHT (AZIM)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlAz2, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentBlue}"/>
                            </Grid>
                            <Slider x:Name="SlAz2" Minimum="-90" Maximum="90" Value="0" ValueChanged="OnParameterChanged"/>
                            <Grid Margin="0,2,0,0">
                                <TextBlock Text="LEFT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Left"/>
                                <TextBlock Text="CENTER" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                                <TextBlock Text="RIGHT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Station 3 -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreen}" Margin="0,0,8,0"/>
                                <TextBlock Text="Station 3" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <!-- Elevation -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="UP-DOWN (ELEV)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlEl3, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentGreen}"/>
                            </Grid>
                            <Slider x:Name="SlEl3" Minimum="0" Maximum="90" Value="45" Margin="0,0,0,15" ValueChanged="OnParameterChanged"/>

                            <!-- Azimuth -->
                            <Grid Margin="0,0,0,2">
                                <TextBlock Text="LEFT-RIGHT (AZIM)" Style="{StaticResource SliderLabel}"/>
                                <TextBox HorizontalAlignment="Right" Width="40" Text="{Binding ElementName=SlAz3, Path=Value, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" Foreground="{StaticResource AccentBlue}"/>
                            </Grid>
                            <Slider x:Name="SlAz3" Minimum="-90" Maximum="90" Value="0" ValueChanged="OnParameterChanged"/>
                            <Grid Margin="0,2,0,0">
                                <TextBlock Text="LEFT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Left"/>
                                <TextBlock Text="CENTER" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                                <TextBlock Text="RIGHT" FontSize="8" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- RIGHT PANEL: STATS & MAP -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Stats Row -->
            <UniformGrid Rows="1" Margin="0,0,0,20">
                <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="OBJECT HEIGHT" Style="{StaticResource SliderLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtHeight" Text="---" FontSize="24" FontWeight="Bold" FontFamily="Consolas" Foreground="White"/>
                            <TextBlock Text="m" VerticalAlignment="Bottom" Margin="4,0,0,3" Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="GROUND X" Style="{StaticResource SliderLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtX" Text="---" FontSize="24" FontWeight="Bold" FontFamily="Consolas" Foreground="White"/>
                            <TextBlock Text="m" VerticalAlignment="Bottom" Margin="4,0,0,3" Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="GROUND Y" Style="{StaticResource SliderLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtY" Text="---" FontSize="24" FontWeight="Bold" FontFamily="Consolas" Foreground="White"/>
                            <TextBlock Text="m" VerticalAlignment="Bottom" Margin="4,0,0,3" Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="STATUS" Style="{StaticResource SliderLabel}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="{StaticResource AccentRed}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtStatus" Text="NO FIX" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentRed}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Map Area -->
            <Border Grid.Row="1" Background="#0D1117" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12" ClipToBounds="True">
                <Grid>
                    <!-- Axis Lines -->
                    <Canvas Panel.ZIndex="1" Opacity="0.1">
                        <Line X1="0" Y1="300" X2="2000" Y2="300" Stroke="White" StrokeThickness="1"/>
                        <Line X1="600" Y1="0" X2="600" Y2="2000" Stroke="White" StrokeThickness="1"/>
                    </Canvas>

                    <!-- Info Overlay -->
                    <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Background="#CC0F1218" BorderBrush="#33FFFFFF" BorderThickness="1" CornerRadius="4" Padding="8,4" Panel.ZIndex="10">
                        <TextBlock Text="System: 3-Axis Directional" FontFamily="Consolas" Foreground="White"/>
                    </Border>

                    <!-- Legend -->
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Background="#CC0F1218" BorderBrush="#33FFFFFF" BorderThickness="1" CornerRadius="4" Padding="12" Panel.ZIndex="10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Ellipse Width="6" Height="6" Fill="{StaticResource AccentGreen}"/>
                                <TextBlock Text="Station" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Rectangle Width="10" Height="2" Fill="{StaticResource AccentBlue}"/>
                                <TextBlock Text="Ray" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="4,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="6" Height="6" Fill="{StaticResource AccentRed}"/>
                                <TextBlock Text="Target" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Rendering Canvas -->
                    <Viewbox Stretch="Uniform">
                        <Canvas x:Name="MapCanvas" Width="600" Height="600" Background="Transparent"/>
                    </Viewbox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>